! ==============================================================================
! ISP (Basic Config)
! ==============================================================================
enable
configure terminal

! General
hostname ISP
service password-encryption
no ip domain-lookup
banner motd #Unauthorized Access Prohibited#

! AAA
enable secret capstone
aaa new-model
aaa authentication login default local
aaa authorization exec default local
username admin privilege 15 secret capstone

! Line
line console 0
 logging synchronous
 ! login local
 exec-timeout 5 0
line vty 0 4
 logging synchronous
 ! login local
 transport input ssh
 exec-timeout 5 0

! SSH
exit
ip domain-name pixel.local
crypto key generate rsa modulus 2048
ip ssh version 2

! Interfaces
interface GigabitEthernet1
 description WWW
 !ip address 8.8.8.8 255.255.255.255
 ip address 10.129.3.254 255.255.255.0
 no shutdown

interface GigabitEthernet2
 description Link to Washington
 ip address 192.168.1.2 255.255.255.252
 no shutdown

interface GigabitEthernet3
 description Link to Oregon
 ip address 192.168.2.2 255.255.255.252
 no shutdown

interface GigabitEthernet4
 description Link to Hawaii
 ip address 192.168.3.2 255.255.255.252
 no shutdown

! Static Routes
ip route 10.1.1.0 255.255.255.0 192.168.1.1
ip route 10.2.1.0 255.255.255.0 192.168.2.1
ip route 10.3.1.0 255.255.255.0 192.168.3.1

ip route 0.0.0.0 0.0.0.0 10.129.3.1

! NTP
ntp master 1
ntp server time.nist.gov